<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    tools:context=".Menu">

    <Button
        android:id="@+id/btn_impossibleAI"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="225dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#8A2BE2"
        android:fontFamily="@font/cairo"
        android:text="Impossibile"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_easyAI" />

    <Button
        android:id="@+id/btn_players"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="225dp"
        android:layout_height="68dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#C12727"
        android:fontFamily="@font/cairo"
        android:text="Giocatore VS Giocatore"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_easyAI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_easyAI"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="225dp"
        android:layout_height="68dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="	#32CD32"
        android:fontFamily="@font/cairo"
        android:text="Elementare"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="299dp"
        android:layout_height="82dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Tic Tac Toe"
        android:textAlignment="center"
        android:textSize="56sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_players"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>